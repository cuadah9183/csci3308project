<div class="modal fade" id="addMealModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title">Add Meal</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!--meal name input, add search function-->

        <form autocomplete="off" action="/addLog" method="POST">
          <div class="autocomplete" style="width:300px;">
            <input id="myInput" type="text" name="mealName" placeholder="Meal Name">
          </div>
          <!--Nutrition per 1 serving-->

          <p style="margin-left: 20px; height:30px;">Nutrition per 1 serving:</p>
          <div class="form-group row" style="height: 50px; margin-left:40px;">
            <label for="calories" class="col-sm-2 col-form-label">Calories</label>
            <div class="col-sm-10" style="width:150px">
              <input type="number" class="form-control" id="calories" name="calories">
            </div>
          </div>
          <div class="form-group row" style="height: 50px; margin-left:40px;">
            <label for="protein" class="col-sm-2 col-form-label">Protein</label>
            <div class="col-sm-10" style="width:150px">
              <input type="number" class="form-control" id="protein" name="protein">
            </div>
          </div>
          <div class="form-group row" style="height: 50px; margin-left:40px;">
            <label for="fat" class="col-sm-2 col-form-label">Fat</label>
            <div class="col-sm-10" style="width:150px">
              <input type="number" class="form-control" id="fat" name="fat">
            </div>
          </div>
          <div class="form-group row" style="height: 50px; margin-left:40px;">
            <label for="carbs" class="col-sm-2 col-form-label">Carbs</label>
            <div class="col-sm-10" style="width:150px">
              <input type="number" class="form-control" id="carbs" name="carbs">
            </div>
          </div>
          <div>
            <input type="checkbox" id="saveRecipe" name="saveRecipe">
            <label for="saveRecipe"> Save recipe in library? </label><br><br>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary" id="saveMeal" name="saveMeal" value="None">Save
              changes</button>
          </div>

        </form>
      </div>
    </div>

  </div>
</div>